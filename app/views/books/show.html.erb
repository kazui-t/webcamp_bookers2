<div class="container">
  <%= flash[:success] %>
  <div class="row">

    <%= render 'books/sidebar', user: @user, book: @book_new %>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
              <td>
                <%= link_to user_path(@book.user.id) do %>
                <%= attachment_image_tag @book.user, :profile_image, :fill, 100, 100, format: 'jpeg' %>
                <%= @book.user.name %>
              </td>
                <% end %>
              <td><%=link_to @book.title, book_path(@book.id) %></td>
              <td><%= @book.body %></td>
              <% if user_signed_in? && current_user.id == @book.user_id %>
              <td><%= link_to "Edit", edit_book_path(@book), class: "btn btn-secondary" %></td>
              <td><%= link_to "Destroy", book_path(@book), method: :delete, class: "btn btn-secondary" %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>