
<div class="col-lg-4">
  <div class="profile-container">
    <h2>User info</h2>
    <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
    <div class="row">
        <h4 class="col">Name</h4>
        <p class="col"><%= user.name %></p>
    </div>
    <div class="row">
        <h4 class="col">Introduction</h4>
        <p class="col"><%= user.introduce %></p>
    </div>
  </div>

  <% if user.id == current_user.id %>
      <p><%= link_to "プロフィール編集", edit_user_path(user) %></p>
  <% end %>
  　　<h1>New book</h1>
      <%= form_with model: book, local:true do |f| %>
       <h4>Title</h4>
      <%= f.text_field :title %>
       <h4>Opinion</h4>
       <%= f.text_field :opinion %>
       <%= f.submit 'Create Book' , class: "btn btn-secondary"%>
      <% end %>
</div>
