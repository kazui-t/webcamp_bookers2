<div class="container">

  <div class="row">

  <%= render 'users/sidebar', user: @user, book: @book_new %>

  <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
    <table class="table table-hover table-invers">
      <thead>
        <tr>
          <th></th>
          <th>title</th>
          <th>opinion</th>
          <th colspan="3"></th>
          </thead>
        </tr>
      <tbody>
      <% @user.books.each do |book| %>
        <tr>
          <td>
            <%= link_to user_path(@user.id) do %>
            <%= attachment_image_tag book.user, :profile_image, :fill, 100, 100, format: 'jpeg' %>
            <% end %>
          </td>
          <td><%=link_to book.title, book_path(book.id) %></td>
          <td><%= book.body %></td>
        </tr>
      </tbody>
      <% end %>
    </table>
  </div>

  </div>

</div>